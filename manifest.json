{
  "manifest_version": 2,
  "name": "Mindful Mind",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "https://api.openai.com/"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
